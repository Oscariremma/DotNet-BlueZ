<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Oscariremma.DotNetBlueZ</RootNamespace>
  </PropertyGroup>

  <!-- NuGet -->
  <PropertyGroup>
    <PackageId>Oscariremma.DotNetBlueZ</PackageId>
    <Version>1.3.2</Version>
    <Authors>Chris Sidi, changes by Oscar Eriksson</Authors>
    <Title>Quick and dirty library for BlueZ's D-Bus APIs</Title>
    <Description>A quick and dirty library for BlueZ's D-Bus APIs. Focus is on Bluetooth Low Energy APIs.</Description>
    <PackageTags>BlueZ;net-core;netstandard;Bluetooth;BluetoothLowEnergy;BLE</PackageTags>
    <RepositoryUrl>https://github.com/Oscariremma/DotNet-BlueZ</RepositoryUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Tmds.DBus" Version="0.15.0" />
    <DotNetCliToolReference Include="Tmds.DBus.Tool" Version="0.7.0" />
  </ItemGroup>

</Project>
